page{
  background: black;
  opacity: 0.9;
}
.box{
  padding: 30rpx 30rpx;
}
.box .nav{
  padding-bottom: 100rpx;
  display:flex;
  justify-content: space-between;
}
.box .nav .poster{
  width: 150rpx;
  height: 150rpx;
  display: block;
  flex:none;
}
.box .nav .content{
  margin-left: 20rpx;
  display: flex;
  flex:auto;
  flex-direction: column;
}
.box .nav .content .singname{
  font-size: 40rpx;
   color:#fff;
}
.box .nav .content .songname{
  font-size: 30rpx;
   color:#ccc;
}
.box .nav .play{
  width: 100rpx;
  height: 100rpx;
  align-self: center;
}
.box .lyric{
  display: block;
  text-align: center;
  color:#ccc;
}
.box .bottom{
  display: flex;
  color:#fff;
}
.box .bottom .bar{
  margin:0rpx 20rpx;
  margin-top: 25rpx;
  width: 450rpx;
  height: 4rpx;
  background: #ccc;
}
.box .bottom .bar .bar1{
  height: 100%;
  background: blue;
}